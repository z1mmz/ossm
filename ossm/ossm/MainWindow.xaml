<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="ossm.MainWindow"
	x:Name="Window"
    ResizeMode="CanMinimize"
	Title="Open Source Study Manager Project ALPHA 0.01"
	Width="640" Height="480" >

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="169*"/>
            <ColumnDefinition Width="93*"/>
        </Grid.ColumnDefinitions>
        <Grid Width="632" HorizontalAlignment="Left" Height="449" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <Grid HorizontalAlignment="Left" Height="449" VerticalAlignment="Top" Width="632" Background="White">

                <TabControl BorderBrush="White" x:Name="TabControl" TabStripPlacement="Left" Height="402" VerticalAlignment="Top" Width="632" Margin="0,47,0,0">
                    <TabControl.Background>
                        <ImageBrush/>
                    </TabControl.Background>
                    <TabItem x:Name="HomeTab" BorderThickness="0" Header="Home" Background="{x:Null}" FontSize="16" FontFamily="/ossm;component/Fonts/#Tahoma" BorderBrush="{x:Null}" Height="27" Margin="-1,-2,4,0" VerticalAlignment="Top">
                        <Grid Margin="0,0,25,29" Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="310*"/>
                                <ColumnDefinition Width="189*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>

                                <RowDefinition/>

                            </Grid.RowDefinitions>


                            <Button x:Name="timeTableButton" Content="Timetable" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="131" Height="131" Click="timeTableButton_Click" FontSize="18" Foreground="White" Background="ForestGreen" BorderBrush="{x:Null}" FontWeight="Bold"/>
                            <ComboBox x:Name="ClassComboBox" SelectedItem="Select Subject" HorizontalAlignment="Left" Height="28" Margin="10,168,0,0" VerticalAlignment="Top" Width="368" RenderTransformOrigin="-1.108,0.913" SelectionChanged="ClassComboBox_SelectionChanged" Grid.ColumnSpan="2" Background="ForestGreen">
                                <ComboBox.BorderBrush>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black" Offset="0"/>
                                        <GradientStop Color="#FF0F0F0F" Offset="1"/>
                                    </LinearGradientBrush>
                                </ComboBox.BorderBrush>
                            </ComboBox>
                            <Label Content="Select Subject" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.509,-0.293"/>
                            <Button x:Name="addClassButton" Content="Add Subject" HorizontalAlignment="Left" Margin="146,0,0,0" VerticalAlignment="Top" Width="131" Height="131" Click="addClass" FontSize="18" Background="ForestGreen" Foreground="White" BorderBrush="{x:Null}" FontWeight="Bold"/>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="TimeTableTab" Header="Time table" BorderBrush="{x:Null}" Background="{x:Null}" FontSize="16" FontFamily="/ossm;component/Fonts/#Tahoma" Margin="-1,-2,7,-2"/>
                    <TabItem x:Name="SettingsTab" Header="Settings" BorderBrush="{x:Null}" Background="{x:Null}" FontSize="16" FontFamily="/ossm;component/Fonts/#Tahoma" Margin="0,29,4,-33">
                        <Grid Background="White" Margin="0,0,-3,0">
                            <TextBlock HorizontalAlignment="Left" Height="217" Margin="29,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="447"><Run Text="OSSM Open Source Study Manger Apha 0.01"/><LineBreak/><Run Text="Code By Wolf Zimmermann"/><LineBreak/><Run Text="Design reference by ******** - Does he want to be Named?"/><LineBreak/><Run Text=""/><LineBreak/><Run Text="This project is in its very early stages so expect data loss and do not trust it fully yet be safe make backups"/><LineBreak/><Run Text="Contact Wolf about any bugs"/><LineBreak/><Run/><LineBreak/><Run Text="Settings will be implements soon dont worry ill let you change the colours soon"/></TextBlock>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="AddClassTab" Header="Add Subject" BorderBrush="{x:Null}" Background="{x:Null}" FontSize="16" FontFamily="/ossm;component/Fonts/#Tahoma" Margin="0,-21,7,17" IsHitTestVisible="True">

                        <Grid Background="White" Margin="10,0,-13,0">
                            <Label Content="Subject Code" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Height="26" Width="104"/>
                            <Label Content="Subject name" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Height="26" Width="117"/>
                            <Label Content="Description&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Height="42" Width="104"/>
                            <TextBox x:Name="subjectCodeText" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" Margin="151,28,0,0" TextChanged="TextBox_TextChanged"/>
                            <TextBox x:Name="subjectNameBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" Margin="151,62,0,0" TextChanged="TextBox_TextChanged"/>
                            <TextBox x:Name="subjectDescBox" HorizontalAlignment="Left" Height="282" Margin="151,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333"/>
                            <Button x:Name="AddSubject" Content="Add Subject" HorizontalAlignment="Left" Margin="15,197,0,0" VerticalAlignment="Top" Width="112" Height="30" Click="AddSubjectClick"/>
                        </Grid>

                    </TabItem>


                </TabControl>
                <Label Content="OSSM" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Width="auto" VerticalAlignment="Bottom" Height="47" Foreground="White" FontSize="26.667" Margin="0,0,533,402" >
                    <Label.Background>
                        <SolidColorBrush Color="ForestGreen"/>
                    </Label.Background>
                </Label>
            </Grid>
        </Grid>
    </Grid>
</Window>