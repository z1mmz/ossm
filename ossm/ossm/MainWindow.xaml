<Window x:Class="ossm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Open Source Study Manager" Height="500" Width="700"
        Background="Snow">
    <Grid Background="Ivory">
        <Label Content="Welcome to OSSM" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="67" Background="ForestGreen" Foreground="White" FontSize="20" />
        
        
        <Button Content="View Time table" HorizontalAlignment="Left" Margin="71,113,0,0" VerticalAlignment="Top" Width="103" Height="27" Click="Button_Click"/>
        <ComboBox x:Name="ClassComboBox" HorizontalAlignment="Left" Height="27" Margin="71,218,0,0" VerticalAlignment="Top" Width="390" RenderTransformOrigin="-1.108,0.913" SelectionChanged="ClassComboBox_SelectionChanged"/>
        <Label Content="Select Class" HorizontalAlignment="Left" Margin="71,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.509,-0.293"/>
        <Button x:Name="viewNotesButton" Content="View Notes" HorizontalAlignment="Left" Margin="497,218,0,0" VerticalAlignment="Top" Width="103" Height="27" Click="viewNotesClick"/>
        <Button x:Name="addClassButton" Content="Add Class" HorizontalAlignment="Left" Margin="195,113,0,0" VerticalAlignment="Top" Width="103" Height="27" Click="addClass"/>
        <TextBox x:Name="testBox" HorizontalAlignment="Left" Height="59" Margin="122,315,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="129"/>

    </Grid>
</Window>
