        <TextBlock HorizontalAlignment="Left" Margin="160,24,0,0" TextWrapping="Wrap" Text="Monday" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="241,24,0,0"><Run Text="Tuesday"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Wednesday" VerticalAlignment="Top" Margin="322,24,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Thursday" VerticalAlignment="Top" Margin="403,24,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Friday" VerticalAlignment="Top" Margin="482,24,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Saturday" VerticalAlignment="Top" Margin="561,24,0,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Sunday" VerticalAlignment="Top" Margin="642,24,0,0"/>
        <Button x:Name="addClass"  HorizontalAlignment="Left" Margin="774,104,0,0" VerticalAlignment="Top" Width="33" Height="33" BorderBrush="{x:Null}" RenderTransformOrigin="0.758,1.121" Click="addClass_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-17.028"/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="img/add.png"/>
            </Button.Background>
            <Button.Foreground>
                <ImageBrush ImageSource="img/add.png" Stretch="Uniform"/>
            </Button.Foreground>
        </Button>

